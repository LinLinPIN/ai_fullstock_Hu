</view>
</view>
<swiper class="section story white" indicator-dots>
<block wx:for="{{design}}" wx:key='id'>
<!-- block不会出现在DOM,他就是用来承载指令的 -->
<swiper-item>
    <view class="content">
    <view class="subheader">外观</view>
    <view class="header">{{item.header}}</view>
    <view class="description">
    {{item.description}}
    </view>
    <image src="{{item.image}}" mode="aspectFill"/>
    </view>
</swiper-item>
</block>
</swiper>
